{
  // port to listen
  "port": 3000,

  // host to swagger ui
  "host": "127.0.0.1",

  // service name
  "name": "Wezilog api",

  // basedir for locations
  "baseDir": "../",

  //timezone
  //"timezone":  "UTC",

  // activate swagger explorer in http://host:port/explorer
  "debug": true,
  
  // activate multi Core support
  "cores": 1,  //"cores": "auto",

  //default locations
  "locations": {
    "swaggerFile": "config/swagger20.json",
    "initFile": "config/init.json",
    "middlewareFile": "config/middleware.json",
    "connections": "config/connections.js",
	"permissions": "config/permissions.json",
    "routesApi": "./routesApi",
    "routesDir": "./routesDir",
    "security": "./security",
    "models": "./models",
    "libs": "./lib",
    "views": "./views",
    "init": "./init",
    "middleware": "./middleware",
    "static": "./public"
  }

}
